{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/base/*": ["base/*"],
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/core/*": ["core/*"],
      "@/helpers": ["helpers"],
      "@/helpers/*": ["helpers/*"],
      "@/lib/*": ["lib/*"],
      "@/public/*": ["public/*"],
      "@/routes/*": ["routes/*"],
      "@/styles/*": ["styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
