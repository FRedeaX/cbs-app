{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "react/no-danger": "off",
    "react/no-underscore-dangle": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "@next/next/no-document-import-in-page": "off"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "react/function-component-definition": [
    2,
    {
      "namedComponents": "function-declaration"
    }
  ]
}
